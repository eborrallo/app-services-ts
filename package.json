{
  "name": "app-services-ts",
  "version": "1.0.0",
  "description": "",
  "license": "",
  "scripts": {
    "dev:auth:api": "NODE_ENV=dev ts-node-dev --ignore-watch node_modules ./src/apps/auth/rest/start.ts",
    "lint": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.+(js|ts|tsx|json|yaml)\" \"tests/**/*.+(js|ts|tsx|json|yaml)\"",
    "test": "npm run test:unit && npm run test:features",
    "test:unit": "NODE_ENV=test jest",
    "start:auth:api": "NODE_ENV=production node dist/src/apps/auth/api/start",
    "start:storage:api": "NODE_ENV=production node dist/src/apps/storage/api/start",
    "start:notifier:monitor": "NODE_ENV=production node dist/src/apps/notifier/monitor/start",
    "test:features": "npm run test:auth:features && npm run test:storage:features",
    "test:auth:features": "NODE_ENV=test npx cucumber-js -p auth",
    "test:storage:features": "NODE_ENV=test npx cucumber-js -p storage",
    "build": "npm run build:clean && npm run build:tsc && npm run build:di",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:di": "copy 'src/**/*.{json,yaml,html,png,proto}' dist/src",
    "build:clean": "rm -r dist; exit 0",
    "build:proto": "npx proto-loader-gen-types --longs=String --enums=String --defaults --oneofs --grpcLib=@grpc/grpc-js --outDir=./src/apps/auth/grpc/proto/build/ ./src/apps/auth/grpc/proto/*.proto",
    "command:auth:rabbitmq": "NODE_ENV=production ts-node src/apps/auth/api/command/runConfigureRabbitMQCommand",
    "command:storage:rabbitmq": "NODE_ENV=production ts-node src/apps/storage/api/command/runConfigureRabbitMQCommand",
    "command:notifier:rabbitmq": "NODE_ENV=production ts-node src/apps/notifier/monitor/command/runConfigureRabbitMQCommand"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^7.11.0",
    "@ethersproject/providers": "^5.7.2",
    "@grpc/grpc-js": "^1.9.14",
    "amqplib": "^0.8.0",
    "aws-sdk": "^2.1525.0",
    "axios": "^1.6.2",
    "body-parser": "^1.19.0",
    "bodybuilder": "^2.4.0",
    "bson": "^4.4.0",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "convict": "^6.2.0",
    "cookie-parser": "^1.4.5",
    "cookie-session": "^1.4.0",
    "copy": "^0.0.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "errorhandler": "^1.5.1",
    "ethers": "^6.9.1",
    "express": "^4.17.1",
    "express-promise-router": "^4.0.1",
    "express-validator": "^6.10.0",
    "firebase-admin": "^12.0.0",
    "glob": "^7.1.6",
    "google-protobuf": "^3.21.2",
    "helmet": "^4.4.1",
    "http-status": "^1.5.0",
    "i": "^0.3.7",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^5.9.2",
    "node-dependency-injection": "^2.6.11",
    "npm": "^10.4.0",
    "nunjucks": "^3.2.3",
    "pg": "^8.7.1",
    "stream": "^0.0.2",
    "ts-node": "^10.8.1",
    "typeorm": "^0.3.17",
    "typescript": "^4.2.3",
    "uuid": "^8.3.2",
    "uuid-validate": "0.0.3",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^9.6.0",
    "@faker-js/faker": "^8.3.1",
    "@grpc/proto-loader": "^0.7.10",
    "@types/amqplib": "^0.8.2",
    "@types/bson": "^4.0.3",
    "@types/chai": "^4.3.11",
    "@types/compression": "^1.7.0",
    "@types/connect-flash": "0.0.36",
    "@types/convict": "^6.1.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cookie-session": "^2.0.42",
    "@types/cors": "^2.8.12",
    "@types/cucumber": "^6.0.1",
    "@types/errorhandler": "1.5.0",
    "@types/express": "^4.17.11",
    "@types/glob": "^7.1.3",
    "@types/google-protobuf": "^3.15.12",
    "@types/helmet": "0.0.48",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mongodb": "^3.6.20",
    "@types/node": "^18.8.5",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.1",
    "@types/uuid-validate": "0.0.1",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "autoprefixer": "^10.4.7",
    "chai": "^4.3.10",
    "eslint": "8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "grpc_tools_node_protoc_ts": "^5.3.3",
    "grpc-tools": "^1.12.4",
    "husky": "^5.1.3",
    "jest": "^28.1.1",
    "lint-staged": "10.5.4",
    "postcss": "^8.4.14",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "tailwindcss": "^3.1.3",
    "ts-jest": "^28.0.5",
    "ts-mockito": "^2.6.1",
    "ts-node-dev": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  }
}
